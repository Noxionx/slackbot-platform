{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es6",
    "moduleResolution": "node",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "target": "es5",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "exclude": ["**/node_modules/*"],
  "include": ["**/*.ts"],
  "paths": {
    "./*": ["./src/*"],
    "@services/*": ["src/services/*"],
    "@models/*": ["src/models/*"]
  }
}
